---
	const pdfUrl = "/assets/Chung_Hannah_Resume.pdf";
	const previewUrl = "/assets/Chung_Hannah_Resume.png";
	const backgroundUrl = "/assets/resume-bg.mp4";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Resume</title>
		<style>
			html,
			body {
				margin: 0;
				width: 100%;
				height: 100%;
			}

			body {
				background: #ffffff;
				overflow: hidden;
				position: relative;
			}

			.background-video {
				position: fixed;
				inset: 0;
				width: 100%;
				height: 100%;
				object-fit: cover;
				object-position: center;
				z-index: 0;
			}

			.preview {
				position: relative;
				z-index: 1;
				height: 100%;
				display: grid;
				place-items: center;
				padding: 32px;
			}

			.preview img {
				width: min(25vw, 360px);
				height: auto;
				box-shadow: 0 24px 80px rgba(0, 0, 0, 0.25);
			}

		</style>
	</head>
	<body>
		<video
			class="background-video"
			src={backgroundUrl}
			autoplay
			muted
			loop
			playsinline
		></video>
		<a class="preview" href={pdfUrl} target="_blank" rel="noopener noreferrer">
			<img src={previewUrl} alt="Resume preview" />
		</a>
	</body>
</html>
