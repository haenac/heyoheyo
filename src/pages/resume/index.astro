---
	const pdfUrl = "/assets/Chung_Hannah_Resume.pdf";
	const previewUrl = "/assets/Chung_Hannah_Resume.png";
	const backgroundUrl = "/assets/resume-bg.mp4";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Resume</title>
		<link rel="preconnect" href="https://fonts.cdnfonts.com" />
		<link rel="stylesheet" href="https://fonts.cdnfonts.com/css/nt-epika" />
		<style>
			:root {
				color-scheme: light;
				--ink: #8d4585;
				--hover: #e6b400;
				font-family: "NT Epika", sans-serif;
			}

			html,
			body {
				margin: 0;
				width: 100%;
				height: 100%;
			}

			body {
				background: #ffffff;
				overflow: hidden;
				position: relative;
				color: var(--ink);
			}

			.background-video {
				position: fixed;
				inset: 0;
				width: 100%;
				height: 100%;
				object-fit: cover;
				object-position: center;
				z-index: 0;
			}

			.preview {
				position: relative;
				z-index: 1;
				height: 100%;
				display: grid;
				place-items: center;
				padding: 32px;
			}

			.preview img {
				width: min(25vw, 360px);
				height: auto;
				box-shadow: 0 24px 80px rgba(0, 0, 0, 0.25);
			}

			.float-links {
				position: fixed;
				left: 0;
				right: 0;
				top: 82vh;
				bottom: 1vh;
				pointer-events: none;
				z-index: 3;
			}

			.float-links a {
				position: absolute;
				color: var(--ink);
				text-decoration: none;
				text-transform: uppercase;
				letter-spacing: 0.18em;
				font-size: 1.05rem;
				font-weight: 500;
				pointer-events: auto;
				animation: swell-drift 18s ease-in-out infinite;
			}

			.float-links a span {
				display: inline-block;
				animation: glitchy-drift 7s ease-in-out infinite;
			}

			.float-resume {
				left: 12%;
				top: 10%;
				animation-delay: 0.2s;
			}

			.float-projects {
				left: 50%;
				top: 40%;
				transform: translateX(-50%);
				animation-delay: 1.2s;
			}

			.float-poetry {
				left: 72%;
				top: 65%;
				animation-delay: 0.6s;
			}

			.float-life {
				right: 12%;
				top: 22%;
				animation-delay: 2.1s;
			}

			.float-links a:hover,
			.float-links a:focus-visible {
				color: var(--hover);
				font-weight: 800;
			}

			@keyframes swell-drift {
				0% {
					transform: translate(0, 0);
				}
				25% {
					transform: translate(28px, -20px);
				}
				50% {
					transform: translate(-24px, 26px);
				}
				75% {
					transform: translate(18px, -28px);
				}
				100% {
					transform: translate(0, 0);
				}
			}

			@keyframes glitchy-drift {
				0% {
					transform: translate(0, 0);
				}
				12% {
					transform: translate(20px, -6px);
				}
				26% {
					transform: translate(-18px, 18px);
				}
				41% {
					transform: translate(26px, -20px);
				}
				57% {
					transform: translate(-24px, 12px);
				}
				71% {
					transform: translate(18px, 24px);
				}
				86% {
					transform: translate(-12px, -18px);
				}
				100% {
					transform: translate(0, 0);
				}
			}

			.video-transition {
				position: fixed;
				inset: 0;
				opacity: 0;
				pointer-events: none;
				z-index: 4;
				-webkit-mask-image:
					repeating-linear-gradient(
						90deg,
						#000 0 28px,
						transparent 28px 56px
					),
					repeating-linear-gradient(
						0deg,
						#000 0 28px,
						transparent 28px 56px
					);
				-webkit-mask-size: 56px 56px;
				-webkit-mask-repeat: repeat;
				mask-image:
					repeating-linear-gradient(
						90deg,
						#000 0 28px,
						transparent 28px 56px
					),
					repeating-linear-gradient(
						0deg,
						#000 0 28px,
						transparent 28px 56px
					);
				mask-size: 56px 56px;
				mask-repeat: repeat;
			}

			.video-transition video {
				width: 100%;
				height: 100%;
				object-fit: cover;
			}

			body.is-transitioning .video-transition {
				animation: pixel-reveal 1.8s steps(6, end) forwards;
			}

			@keyframes pixel-reveal {
				0% {
					opacity: 0;
					-webkit-mask-size: 56px 56px;
					mask-size: 56px 56px;
					-webkit-mask-position: 0 0, 0 0;
					mask-position: 0 0, 0 0;
				}
				40% {
					opacity: 0.6;
					-webkit-mask-size: 36px 36px;
					mask-size: 36px 36px;
					-webkit-mask-position: 18px 8px, 8px 18px;
					mask-position: 18px 8px, 8px 18px;
				}
				100% {
					opacity: 1;
					-webkit-mask-size: 10px 10px;
					mask-size: 10px 10px;
					-webkit-mask-position: 36px 20px, 20px 36px;
					mask-position: 36px 20px, 20px 36px;
				}
			}

			@media (prefers-reduced-motion: reduce) {
				.float-links a {
					animation: none;
				}

				.float-links a span {
					animation: none;
				}
			}

			@media (max-width: 720px) {
				.float-links {
					position: static;
					height: auto;
					display: flex;
					justify-content: center;
					gap: 20px;
					margin-top: 48px;
					pointer-events: auto;
				}

				.float-links a {
					position: static;
					animation: none;
				}

				.float-links a span {
					animation: none;
				}
			}

		</style>
	</head>
	<body>
		<video
			class="background-video"
			src={backgroundUrl}
			autoplay
			muted
			loop
			playsinline
		></video>
		<a class="preview" href={pdfUrl} target="_blank" rel="noopener noreferrer">
			<img src={previewUrl} alt="Resume preview" />
		</a>
		<nav class="float-links" aria-label="Primary">
			<a class="float-resume" href="/"><span>Home</span></a>
			<a class="float-projects" href="/projects"><span>Projects</span></a>
			<a class="float-poetry" href="/poetry"><span>Poetry</span></a>
			<a class="float-life" href="/life"><span>Life</span></a>
		</nav>
		<div class="video-transition" aria-hidden="true">
			<video
				src="/assets/cloud.mp4"
				autoplay
				muted
				loop
				playsinline
			></video>
		</div>
		<script>
			const homeLink = document.querySelector(".float-resume");
			if (homeLink) {
				homeLink.addEventListener("click", (event) => {
					event.preventDefault();
					document.body.classList.add("is-transitioning");
					const href = homeLink.getAttribute("href");
					setTimeout(() => {
						window.location.href = href;
					}, 1400);
				});
			}
		</script>
	</body>
</html>
