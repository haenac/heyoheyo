		<title>Heyo Studio</title>
		<link rel="preconnect" href="https://fonts.cdnfonts.com" />
		<link rel="stylesheet" href="https://fonts.cdnfonts.com/css/nt-epika" />
		<link rel="stylesheet" href="https://fonts.cdnfonts.com/css/spread-bita10" />
		<style>
			:root {
				color-scheme: light;
				--ink: #000000;
				--paper: #ffffff;
				--cloud-white: #f4f5f0;
				--hover: #e6b400;
				font-family: "NT Epika";
			}

			body {
				margin: 0;
				padding: 28px;
				background: var(--paper);
				color: var(--ink);
				min-height: 100vh;
				position: relative;
			}

			main {
				padding: 120px 8px 0;
				animation: rise 0.9s ease 0.1s both;
				position: relative;
				z-index: 2;
			}

			h1 {
				margin: 0 0 16px;
				font-size: clamp(2.6rem, 5.8vw + 1rem, 6rem);
				line-height: 0.92;
				text-transform: uppercase;
				text-align: center;
				letter-spacing: 0.04em;
				font-family: "SpreadBitA10", sans-serif;
				font-weight: 400;
				opacity: 0.7;
				position: relative;
			}

			h1::after {
				content: attr(data-text);
				position: absolute;
				inset: 0;
				color: transparent;
				background-image:
					linear-gradient(var(--hover) 0 0),
					linear-gradient(var(--hover) 0 0),
					linear-gradient(var(--hover) 0 0),
					linear-gradient(var(--hover) 0 0),
					linear-gradient(var(--hover) 0 0),
					linear-gradient(var(--hover) 0 0),
					linear-gradient(var(--hover) 0 0),
					linear-gradient(var(--hover) 0 0),
					linear-gradient(var(--hover) 0 0),
					linear-gradient(var(--hover) 0 0);
				background-repeat: no-repeat;
				background-size: 14px 14px;
				-webkit-background-clip: text;
				background-clip: text;
				opacity: 1;
				animation: flicker 2.1s steps(2, end) infinite;
				pointer-events: none;
			}

			.tagline {
				font-size: clamp(1rem, 1.6vw + 0.7rem, 1.5rem);
				max-width: 44rem;
				margin: 0 auto;
				text-align: center;
			}

			.float-links {
				position: absolute;
				left: 0;
				right: 0;
				top: 70vh;
				bottom: 4vh;
				pointer-events: none;
				z-index: 1;
			}

			.float-links a {
				position: absolute;
				color: var(--ink);
				text-decoration: none;
				text-transform: uppercase;
				letter-spacing: 0.18em;
				font-size: 1.05rem;
				font-weight: 500;
				pointer-events: auto;
				animation: swell-drift 18s ease-in-out infinite;
			}

			.float-links a span {
				display: inline-block;
				animation: glitchy-drift 7s ease-in-out infinite;
			}

			.float-cloud {
				position: absolute;
				left: 0;
				right: 0;
				top: 0;
				bottom: 0;
				pointer-events: none;
				z-index: 0;
			}

			.float-cloud video {
				display: block;
				width: 100%;
				height: 100%;
				object-fit: cover;
				object-position: top;
			}

			.float-resume {
				left: 12%;
				top: 10%;
				animation-delay: 0.2s;
			}

			.float-projects {
				left: 50%;
				top: 40%;
				transform: translateX(-50%);
				animation-delay: 1.2s;
			}

			.float-poetry {
				left: 72%;
				top: 65%;
				animation-delay: 0.6s;
			}

			.float-life {
				right: 12%;
				top: 22%;
				animation-delay: 2.1s;
			}

			.float-links a:hover,
			.float-links a:focus-visible {
				color: var(--hover);
				font-weight: 800;
			}

			@keyframes rise {
				from {
					opacity: 0;
					transform: translateY(14px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@keyframes flicker {
				0% {
					opacity: 0.15;
					background-position:
						12% 22%,
						30% 12%,
						42% 54%,
						58% 28%,
						70% 60%,
						82% 18%,
						20% 62%,
						92% 28%,
						16% 40%,
						52% 8%;
				}
				20% {
					opacity: 1;
					background-position:
						6% 44%,
						22% 66%,
						40% 18%,
						58% 52%,
						72% 34%,
						86% 58%,
						30% 22%,
						96% 66%,
						12% 30%,
						48% 60%;
				}
				45% {
					opacity: 0.35;
					background-position:
						14% 10%,
						28% 42%,
						44% 70%,
						56% 14%,
						68% 44%,
						80% 30%,
						36% 54%,
						92% 20%,
						18% 66%,
						60% 8%;
				}
				70% {
					opacity: 1;
					background-position:
						4% 62%,
						20% 18%,
						38% 46%,
						54% 66%,
						66% 22%,
						78% 40%,
						46% 72%,
						92% 10%,
						26% 36%,
						62% 54%;
				}
				100% {
					opacity: 0.2;
					background-position:
						10% 30%,
						32% 58%,
						46% 10%,
						60% 40%,
						72% 16%,
						88% 52%,
						40% 40%,
						96% 68%,
						22% 14%,
						56% 64%;
				}
			}

			@keyframes swell-drift {
				0% {
					transform: translate(0, 0);
				}
				25% {
					transform: translate(28px, -20px);
				}
				50% {
					transform: translate(-24px, 26px);
				}
				75% {
					transform: translate(18px, -28px);
				}
				100% {
					transform: translate(0, 0);
				}
			}

			@keyframes glitchy-drift {
				0% {
					transform: translate(0, 0);
				}
				12% {
					transform: translate(20px, -6px);
				}
				26% {
					transform: translate(-18px, 18px);
				}
				41% {
					transform: translate(26px, -20px);
				}
				57% {
					transform: translate(-24px, 12px);
				}
				71% {
					transform: translate(18px, 24px);
				}
				86% {
					transform: translate(-12px, -18px);
				}
				100% {
					transform: translate(0, 0);
				}
			}

			@media (prefers-reduced-motion: reduce) {
				.float-links a {
					animation: none;
				}
			}

			@media (max-width: 720px) {
				body {
					padding: 20px;
				}

				main {
					padding-top: 32px;
				}

				.float-links {
					position: static;
					height: auto;
					display: flex;
					justify-content: center;
					gap: 20px;
					margin-top: 48px;
					pointer-events: auto;
				}

				.float-links a {
					position: static;
					animation: none;
				}

				.float-links a span {
					animation: none;
				}

				.float-cloud {
					position: static;
					width: 100%;
					height: auto;
					margin: 36px auto 0;
					transform: none;
				}

				.float-cloud video {
				}
			}
		</style>
	</head>
	<body>
		<main>
			<h1 data-text="Heyo Studio">Heyo Studio</h1>
		</main>
		<div class="float-links" aria-label="Primary links">
			<a class="float-resume" href="/resume"><span>Resume</span></a>
			<a class="float-projects" href="/projects"><span>Projects</span></a>
			<a class="float-poetry" href="/poetry"><span>Poetry</span></a>
			<a class="float-life" href="/life"><span>Life</span></a>
		</div>
		<div class="float-cloud" aria-hidden="true">
			<video
				src="/assets/cloud.mp4"
				autoplay
				muted
				loop
				playsinline
			></video>
		</div>
	</body>
</html>
